<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_timer">

    <fragment
        android:id="@+id/navigation_timer"
        android:name="com.skash.timetrack.feature.timer.TimerFragment"
        android:label="TimerFragment"
        tools:layout="@layout/fragment_timer" />
    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.skash.timetrack.feature.overview.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.skash.timetrack.feature.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>