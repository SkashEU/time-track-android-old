<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_overview">

    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.skash.timetrack.feature.overview.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.skash.timetrack.feature.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/navigate_to_manage_project"
            app:destination="@id/navigation_manage_projects" />
    </fragment>

    <dialog
        android:id="@+id/navigation_manage_projects"
        android:name="com.skash.timetrack.feature.settings.project.manage.ManageProjectFragment"
        android:label="ManageProjectFragment">
        <argument
            android:name="project"
            app:argType="com.skash.timetrack.core.model.Project"
            app:nullable="true" />
    </dialog>

    <fragment
        android:id="@+id/navigation_projects"
        android:name="com.skash.timetrack.feature.settings.project.ProjectsFragment"
        android:label="ProjectsFragment"></fragment>
</navigation>